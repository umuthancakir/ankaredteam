<!doctype html>
<html lang="tr">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>Hacked By TurkHackTeam | Anka Red Team</title>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Iceland">
<style>
  :root{
    --red:#ff1a1a;
    --ts1:0 0 6px rgba(255,20,20,0.9);
    --ts2:0 0 18px rgba(255,30,30,0.7);
    --ts3:0 0 36px rgba(255,50,50,0.45);
  }
  html,body{
    height:100%;
    margin:0;
    background:radial-gradient(ellipse at center,#050505 0%,#000 60%);
    color:#fff;
    font-family:'Iceland',sans-serif;
    overflow-x:hidden;
  }
  .wrap{
    min-height:100%;
    display:flex;
    align-items:center;
    justify-content:center;
    flex-direction:column;
    text-align:center;
    padding:36px 20px;
    box-sizing:border-box;
  }
  .logo-wrap{
    position:relative;
    display:inline-block;
    padding:12px;
    border-radius:14px;
    margin-bottom:10px;
  }
  .logo-wrap::before{
    content:"";
    position:absolute;
    left:-8px; right:-8px; top:-8px; bottom:-8px;
    border-radius:18px;
    pointer-events:none;
    z-index:-1;
    box-shadow:
      0 0 12px rgba(255,0,0,0.9),
      0 0 28px rgba(255,20,20,0.6),
      0 0 50px rgba(255,40,40,0.33);
    filter:blur(2px);
  }
  .logo{
    display:block;
    width:240px;
    max-width:72vw;
    height:auto;
    border-radius:6px;
    box-shadow:0 10px 30px rgba(0,0,0,0.8);
    filter:drop-shadow(0 0 10px rgba(255,0,0,0.85));
  }
  .neon{
    color:var(--red);
    margin:6px 0;
    line-height:1.02;
    text-shadow:
      0 0 10px rgba(255,30,30,0.95),
      0 0 26px rgba(255,40,40,0.85),
      0 0 48px rgba(255,80,80,0.45);
    -webkit-font-smoothing:antialiased;
    -moz-osx-font-smoothing:grayscale;
  }
  h1.neon{font-size:3.4rem;margin-top:10px;letter-spacing:.6px;}
  h2.neon{font-size:5rem;margin:8px 0;line-height:0.95;}
  p.neon-small{font-size:1.3rem;margin:6px 0 0;}
  .partner{
    display:inline-block;margin-top:10px;font-size:1.15rem;
    text-decoration:none;color:var(--red);
    text-shadow:var(--ts1),var(--ts2);
  }

  @keyframes subtleFlicker {
    0%   { opacity:1; filter:brightness(1); text-shadow:var(--ts1),var(--ts2),var(--ts3); }
    4%   { opacity:0.7; filter:brightness(0.8); text-shadow:0 0 6px rgba(255,10,10,0.45); }
    8%   { opacity:0.95; filter:brightness(0.95); }
    20%  { opacity:1; }
    100% { opacity:1; }
  }

  body.flicker .neon,
  body.flicker .partner {
    animation: subtleFlicker 1.6s infinite;
    animation-timing-function: linear;
  }

  .blackout{
    position:fixed;left:0;right:0;top:0;bottom:0;background:#000;
    pointer-events:none;opacity:0;transition:opacity .02s linear;z-index:80;
  }
  .blackout.on{opacity:1;}

  @media(max-width:520px){
    .logo{width:66vw;}
    h1.neon{font-size:2.4rem;}
    h2.neon{font-size:3rem;}
    p.neon-small{font-size:1rem;}
  }
</style>
</head>
<body class="flicker">
  <div class="wrap">
    <div class="logo-wrap">
      <img class="logo" src="https://i.hizliresim.com/8cndvl5.png" alt="logo" />
    </div>
    <h1 class="neon">Hello Admin!</h1>
    <h2 class="neon"><b>Anka Red Team Was Here :)</b></h2>
    <p class="neon-small">
      <a class="partner" href="https://turkhackteam.org/" target="_blank" rel="noopener noreferrer">[ Turkhackteam.org ]</a>
    </p>
  </div>

  <div id="blackout" class="blackout"></div>

  <audio id="sec" style="display:none">
    <source src="https://cdn.discordapp.com/attachments/1025874740847575164/1025875083190874212/mt-hani-gokboru-beat.mp3" type="audio/mpeg">
  </audio>

  <script>
    (function(){
      var blackout = document.getElementById('blackout');
      var body = document.body;
      function maybeBlackout(){
        if(Math.random() < 0.12){
          var dur = 20 + Math.random()*120; // çok kısa, anlık hissi
          blackout.classList.add('on');
          body.classList.remove('flicker');
          setTimeout(function(){
            blackout.classList.remove('on');
            setTimeout(function(){ body.classList.add('flicker'); }, 10 + Math.random()*60);
          }, dur);
        }
        var next = 600 + Math.random()*1400; // daha sık ama rastgele
        setTimeout(maybeBlackout, next);
      }
      setTimeout(maybeBlackout, 500 + Math.random()*700);
      document.addEventListener('visibilitychange', function(){
        if(document.hidden){ body.classList.remove('flicker'); blackout.classList.remove('on'); }
        else { body.classList.add('flicker'); }
      });
    })();
  </script>
</body>
</html>
